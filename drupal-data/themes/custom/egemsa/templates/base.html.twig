{% block previous %}{% endblock %}
<header id="header">
  <div class="header-container">
    <h1 id="logo">
      <a href="{{ base_path }}">EGEMSA</a>
    </h1>
    <div id="toggle-nav">
      <button class="zero">
        <i class="fas fa-bars"></i>
      </button>
    </div>

    <aside id="secondary-nav">
      <button class="close-nav" type="button"><i class="fas fa-times"></i></button>
      <figure class="text-center">
        <img src="{{ base_path ~ directory }}/assets/logo-blanco-texto.svg" alt="EGEMSA">
      </figure>
      <div class="search-box">
        <form action="/search/node" method="get">
          <input type="search" name="keys" />
        </form>
      </div>
      <nav>
        {{ page.secondary_nav }}
      </nav>
    </aside>

    <aside class="header-right">
      <nav class="nav-right">
        <ul class="list-unstyled">
          <li><a href="#" class="transparencia">Transparencia</a></li>
          <li><a href="#" class="sesion">Inicio de sesión</a></li>
          <li><a href="#" class="contacto">Contacto</a></li>
        </ul>
      </nav>
    </aside>

  </div>
  <nav id="main-nav">
    {{ page.main_nav }}
  </nav>
</header>

{% block main %}{% endblock %}

<footer id="footer" data-aos="fade-up">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <div class="eg-icon icon-egemsa-blanco"></div>
      </div>
      <div class="col-md-10">
        <div class="row">
          <div class="col-md-3">
            <h5>Conózcanos</h5>
            <nav>
              {{ page.footer_1 }}
            </nav>
          </div>
          <div class="col-md-3">
            {{ page.footer_2 }}
          </div>
          <div class="col-md-3">
            {{ page.footer_3 }}
          </div>
          <div class="col-md-3">
            {{ page.footer_4 }}
            <img src="{{ base_path ~ directory }}/assets/iconos/peru.svg" alt="El Perú primero" />
          </div>
        </div>
      </div>
    </div>
  </div>

  <aside class="footer-final">
    <div class="container">
      <div class="row">
        <div class="col-md-2">
          <p>Mapa del sitio</p>
        </div>
        <div class="col-md-8">
          <p class="text-center">Empresa de Generación Eléctrica Machupicchu Sociedad Anónima - EGEMSA 2020  –  ® Todos los derechos reservados</p>
        </div>
        <div class="col-md-2">
          <p class="social-icons">
            <a href="#" class="social-footer"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="social-footer"><i class="fab fa-instagram"></i></a>
            <a href="#" class="social-footer"><i class="fab fa-twitter"></i></a>
            <a href="#" class="social-footer"><i class="fab fa-youtube"></i></a>
            <a href="#" class="social-footer"><i class="fab fa-whatsapp"></i></a>
          </p>
        </div>
      </div>
    </div>
  </aside>
</footer>
